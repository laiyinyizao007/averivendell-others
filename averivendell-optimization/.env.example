# Averivendell Optimization - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_PATH=./data/optimization.db

# Redis Configuration (Optional - for caching)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Analysis Configuration
WORKSPACE_PATH=/home/averyubuntu/projects
EXCLUDE_PATHS=node_modules,dist,.git,coverage

# Performance Settings
MAX_CONCURRENT_ANALYSIS=5
CACHE_TTL=3600
ENABLE_INCREMENTAL_ANALYSIS=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/optimization.log

# Analysis Thresholds
COMPLEXITY_THRESHOLD=15
DUPLICATION_THRESHOLD=5
MIN_TEST_COVERAGE=70

# Security (do not commit actual tokens)
GITHUB_TOKEN=
SNYK_TOKEN=

# Optional: Notification Settings
ENABLE_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false
