{
  "name": "averivendell-optimization",
  "version": "0.1.0-alpha",
  "description": "Comprehensive analysis and optimization tool for Averivendell workspace projects",
  "main": "dist/index.js",
  "bin": {
    "avopt": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/cli/index.ts",
    "build": "tsc",
    "build:prod": "tsc --project tsconfig.prod.json",
    "start": "node dist/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json,md}'",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "optimization",
    "analysis",
    "code-quality",
    "performance",
    "monitoring",
    "cli"
  ],
  "author": "AI Assistant",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0 <25.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "p-limit": "^5.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jscpd": "^3.5.10",
    "lint-staged": "^15.2.0",
    "madge": "^6.1.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/averivendell-optimization.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/averivendell-optimization/issues"
  },
  "homepage": "https://github.com/yourusername/averivendell-optimization#readme"
}
